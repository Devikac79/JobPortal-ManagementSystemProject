@model JobPortalManagementSystem.Models.JobPost

@{
    ViewBag.Title = "DeleteJobPost";
    Layout = "~/Views/Admin/AdminLayoutpage.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            padding-top: 100px;
            background-color: #f5f5f5;
        }

        .center-content {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .delete-form {
            background-color: #fff;
            border: 1px solid #ddd;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            width: 80%;
            max-width: 600px;
            margin: auto;
        }

            .delete-form h2 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            .delete-form h3 {
                font-size: 18px;
                margin-bottom: 15px;
            }

            .delete-form table {
                width: 100%;
                margin-bottom: 15px;
            }

            .delete-form th, .delete-form td {
                padding: 8px;
                border-bottom: 1px solid #ddd;
            }

            .delete-form th {
                text-align: left;
                font-weight: bold;
                width: 40%;
            }

            .delete-form td {
                text-align: left;
                color: #666;
            }

        .form-actions {
            text-align: center;
            margin-top: 15px;
        }
    </style>
</head>
<body>
    <div class="center-content">
        <div class="delete-form">
            <h2>Delete Job Post</h2>

            <h3>Are you sure you want to delete this?</h3>
            <hr/>
            <table class="table">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.title)</th>
                    <td>@Html.DisplayFor(model => model.title)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.location)</th>
                    <td>@Html.DisplayFor(model => model.location)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.minSalary)</th>
                    <td>@Html.DisplayFor(model => model.minSalary)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.maxSalary)</th>
                    <td>@Html.DisplayFor(model => model.maxSalary)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.postDate)</th>
                    <td>@Html.DisplayFor(model => model.postDate)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.endDate)</th>
                    <td>@Html.DisplayFor(model => model.endDate)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.description)</th>
                    <td>@Html.DisplayFor(model => model.description)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.jobCategory)</th>
                    <td>@Html.DisplayFor(model => model.jobCategory)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.jobNature)</th>
                    <td>@Html.DisplayFor(model => model.jobNature)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.categoryId)</th>
                    <td>@Html.DisplayFor(model => model.categoryId)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.companyName)</th>
                    <td>@Html.DisplayFor(model => model.companyName)</td>
                </tr>
            </table>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">Cancel</a>
                </div>
            }
        </div>
    </div>
</body>
</html>
