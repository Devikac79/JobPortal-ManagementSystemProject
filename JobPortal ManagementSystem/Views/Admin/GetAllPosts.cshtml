@model IEnumerable<JobPortalManagementSystem.Models.JobPost>

@{
    Layout = "~/Views/Admin/AdminLayoutpage.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllPosts</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .container {
            margin-top: 20px;
        }

        .table-image {
            max-width: 100px;
            max-height: 100px;
        }

        /* Style the table header */
        .table thead th {
            font-weight: bold;
            background-color: #f8f9fa;
            text-align: center;
        }

        /* Style the table cells */
        .table tbody td {
            vertical-align: middle;
        }

        /* Style the "Create New" button */
        .btn-create-new {
            margin-bottom: 20px;
            float:left;
        }

      
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Job Post List</h2>

        <div class="text-center">
            @Html.ActionLink("Create New", "AddPost", null, new { @class = "btn btn-primary btn-create-new" })
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Company Name</th>
                        <th>Location</th>
                        <th>Min Salary</th>
                        <th>Max Salary</th>
                        <th>Post Date</th>
                        <th>End Date</th>

                        <th>Job Nature</th>
                        <th>Category</th>
                        <th>Image</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var post in Model)
                    {
                        <tr>
                            <td>@post.title</td>
                            <td>@post.companyName</td>
                            <td>@post.location</td>
                            <td>@post.minSalary</td>
                            <td>@post.maxSalary</td>
                            <td>@post.postDate.ToString("yyyy-MM-dd")</td>
                            <td>@post.endDate.ToString("yyyy-MM-dd")</td>
                          
                            <td>@post.jobNature</td>
                            <td>@ViewBag.CategoryNames[post.categoryId]</td>
                            <td>
                                @if (post.imageData != null && post.imageData.Length > 0)
                                {
                                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(post.imageData)" alt="Job Post Image" class="table-image" />
                                }
                                else
                                {
                                    <span>No Image</span>
                                }
                            </td>
                            <td>
                                @Html.ActionLink("Edit  ", "EditJobPost", new { Id = post.Id }, new { @class = "btn btn-primary btn-sm" })
                                @Html.ActionLink("Delete", "DeleteJobPost", new { Id = post.Id }, new { @class = "btn btn-primary btn-sm" })
                            </td>
                            
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>

