@model List<JobPortal_ManagementSystem.Models.ScheduledInterview>

@{
    ViewBag.Title = "User Dashboard";
 
    Layout = "~/Views/User/UserLayoutpage.cshtml";
}

<h2>Welcome to Your Dashboard</h2>

@if (Model.Count > 0)
{
    <h3>Your Scheduled Interviews</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Interview ID</th>
                <th>Job Post ID</th>
                <th>Interview Date</th>
                <th>Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var interview in Model)
            {
                <tr>
                    <td>@interview.InterviewId</td>
                    <td>@interview.JobPostId</td>
                    <td>@interview.InterviewDate</td>
                    <td>@interview.Location</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No scheduled interviews available.</p>
}
