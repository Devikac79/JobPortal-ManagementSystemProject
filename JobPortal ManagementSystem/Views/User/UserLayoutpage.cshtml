}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomeLayoutpage</title>
    <link href="~/Content/CSS/Home.css" rel="stylesheet" />
    <link href="@Url.Content("~/Content/CSS/Home.css")" rel="stylesheet" type="text/css" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script&display=swap" rel="stylesheet">
    <style>
        .btn0 {
            height: 52px !important;
            width: 130px !important;
            height: 52px !important;
            outline: none !important;
            border: none !important;
            color: white !important;
            cursor: pointer !important;
            transition: all 0.4s !important;
            background-color: rgb(248,83,83) !important;
            text-align: center;
            padding-top: 10px;
            text-decoration: none;
        }

            .btn0:hover {
                background: rgb(248,11,11);
                transition: all 0.4s;
            }

    </style>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <script type="text/javascript">
        function preventBack() { window.history.forward(); }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };

    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">

            <a class="navbar-brand" href="#">
                <img src="~/Content/Images/logo.png" alt="Logo" height="75">
                Job Portal
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav m-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        @Html.ActionLink("Home", "UserHomepage", "User", null, new { @class = "nav-item nav-link" })

                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Profile", "UserProfileDetails", "User", null, new { @class = "nav-item nav-link" })

                    </li>


                    <li class="nav-item ">

                        @Html.ActionLink("Job", "GetAllPosts", "User", null, new { @class = "nav-item nav-link" })

                    </li>
                    <li class="nav-item ">

                        @Html.ActionLink("Applied", "AppliedJobs", "User", null, new { @class = "nav-item nav-link" })

                    </li>
