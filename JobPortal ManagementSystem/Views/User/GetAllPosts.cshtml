@model IEnumerable<JobPortalManagementSystem.Models.JobPost>

@{
    ViewBag.Title = "About";
    Layout = "~/Views/User/UserLayoutpage.cshtml";
}

<style>
    /* Define your custom CSS styles here */
    .container3 {
        max-width: 800px; /* Set the maximum width of the container */
        margin: 0 auto; /* Center the container horizontally */
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Add custom styles for the heading */
    .page-heading {
        /*background-color: cadetblue;*/
        color: black;
        padding: 10px;
        text-align: center;
        margin-bottom: 20px;
    }

    .card-body {
        padding-left: 100px;
    }
    /* Add custom styles for the post title */
    .card-header {
        background-color: cadetblue;
        text-align: center;
    }

    .gradient-custom-2 {
        background-color: #FFCCCB;
        /* fallback for old browsers */
        /*background: #fbc2eb;*/
        /* Chrome 10-25, Safari 5.1-6 */
        /*background: -webkit-linear-gradient(to right, rgba(251, 194, 235, 1), rgba(166, 193, 238, 1));*/
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        /*background: linear-gradient(to right, rgba(251, 194, 235, 1), rgba(166, 193, 238, 1))*/
    }

    /* Custom styles for zoom effect */
    .zoom-on-hover {
        transition: transform 0.3s;
    }

        .zoom-on-hover:hover {
            transform: scale(1.05);
        }

    body {
        padding-top: 150px;
    }
</style>
<!-- Font Awesome -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet" />
<!-- Google Fonts -->
<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
      rel="stylesheet" />
<body class="gradient-custom-2">
    <div class="container3 ">
        @*  <h2 class="page-heading">All Posts</h2>*@

        @if (Model != null && Model.Any())
        {
            <div class="row justify-content-center">
                @foreach (var post in Model)
                {<div class="col-12 col-md-6 mb-4">
                        <div class="card h-100 zoom-on-hover">
                            <div class="card-header">
                                <h5 class="card-title">@post.title</h5>
                            </div>
                            <div class="card-body">
                                <p class="card-text"><strong>Location:</strong> @post.location</p>
                                <p class="card-text"><strong>Salary:</strong> &#8377;@post.minSalary - &#8377;@post.maxSalary</p>
                                <p class="card-text"><strong>Posted:</strong> @post.postDate.ToString("yyyy-MM-dd")</p>
                                <p class="card-text"><strong>End Date:</strong> @post.endDate.ToString("yyyy-MM-dd")</p>
                                <p class="card-text"><strong>Category:</strong> @post.jobCategory</p>
                                <p class="card-text"><strong>Nature:</strong> @post.jobNature</p>
                                <p class="card-text"><strong>Company Name:</strong> @post.companyName</p>
                            </div>
                            <div class="card-footer text-center">
                                <!-- Add a link button to navigate to the detailed page -->
                                <a href="@Url.Action("Details", "User", new { Id = post.Id })" class="btn btn-primary">Details</a>
                            </div>
                        </div>
                    </div>

                }
            </div>
        }
        else
        {
            <p>No posts found.</p>
        }
    </div>
</body>