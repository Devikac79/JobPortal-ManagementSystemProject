@model JobPortalManagementSystem.Models.Contact

@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Home/HomeLayoutpage.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddContact</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/CSS/contact.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
          rel="stylesheet" />
    <style>
        body {
            padding-top: 60px;
        }

        h2 {
            text-align: center;
        }
        .control-label{
            font-weight:bold;
        }
    </style>
</head>
<body>
    <main>
        <div class="slider-area">
            <div class="single-slider section-overly slider-height2 d-flex align-items-center" style="background-image: url(/Content/Images/about.jpg);">
                <div class="container">
                    <div class="row">

                        <div class="hero-cap text-center"></div>

                    </div>
                </div>
            </div>
        </div>



        <div class="container form-container">
            @using (Html.BeginForm("AddContact", "Home", FormMethod.Post, new { id = "contactForm" }))
            {
                @Html.AntiForgeryToken()

            <h2>Contact us</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">


                    @Html.LabelFor(model => model.name, "Name", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", id = "name", placeholder = "Enter Name" } })
                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger", id = "nameValidation" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.email, "Email", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", id = "email", placeholder = "Enter Email" } })
                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger", id = "emailValidation" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.subject, "Subject", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control", id = "subject", placeholder = "Enter Subject" } })
                    @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger", id = "subjectValidation" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.message, "Message", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.message, new { htmlAttributes = new { @class = "form-control", id = "message", rows = 5, placeholder = "Enter Message" } })
                    @Html.ValidationMessageFor(model => model.message, "", new { @class = "text-danger", id = "messageValidation" })
                </div>

                <div class="form-group d-flex justify-content-center">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            }
        </div>

    </main>
    <script src="~/Content/Javascript/contact.js"></script>

</body>
</html>
