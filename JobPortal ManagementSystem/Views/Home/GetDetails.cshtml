@model IEnumerable<JobPortal_ManagementSystem.Models.User>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetDetails</title>

</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Tenth Percentage/Grade</th>
            <th>Twelfth Percentage/Grade</th>
            <th>Graduation Percentage/Grade</th>
            <th>Post Graduation Percentage/Grade</th>
            <th>ImagePath</th>
            <th>Resume</th>
            <th>Image</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td>@item.Phone</td>
                <td>@item.Address</td>
                <td>@item.TenthPercentageOrGrade</td>
                <td>@item.TwelfthPercentageOrGrade</td>
                <td>@item.GraduationGradeOrPercentage</td>
                <td>@item.PostGraduationGradeOrPercentage</td>
                <td>@item.ImagePath</td>

                <td>
                    @if (!string.IsNullOrEmpty(item.ResumePath))
                    {
                        <a href="@item.ResumePath" target="_blank">View Resume</a>
                    }
                    else
                    {
                        <p>No resume available.</p>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Action("GetImage", "Home", new { filePath = item.ImagePath })" alt="User Image" style="max-width: 200px; max-height: 200px;" />
                    }
                    else
                    {
                        <p>No image available.</p>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditDetails", new { Id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</body>
</html>
